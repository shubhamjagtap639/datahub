{
  "featuredocument": {
    "mappings": {
      "doc": {
        "_all": {
          "enabled": false
        },
        "properties": {
          "anchors": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "availability": {
            "type": "text",
            "analyzer": "lowercase_keyword",
            "fielddata": true
          },
          "baseEntity": {
            "type": "text",
            "analyzer": "lowercase_keyword",
            "fielddata": true
          },
          "category": {
            "type": "text",
            "analyzer": "lowercase_keyword",
            "fielddata": true
          },
          "classification": {
            "type": "text",
            "analyzer": "lowercase_keyword",
            "fielddata": true
          },
          "description": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "documentationLink": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "multiproduct": {
            "type": "text",
            "analyzer": "lowercase_keyword",
            "fielddata": true
          },
          "multiproductVersion": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "name": {
            "type": "text",
            "fields": {
              "ngram": {
                "type": "text",
                "analyzer": "delimit_edgengram"
              }
            },
            "analyzer": "delimit"
          },
          "namespace": {
            "type": "text",
            "fields": {
              "ngram": {
                "type": "text",
                "analyzer": "delimit_edgengram"
              }
            },
            "analyzer": "delimit"
          },
          "owners": {
            "type": "text",
            "fields": {
              "ngram": {
                "type": "text",
                "analyzer": "lowercase_keyword_ngram"
              }
            },
            "analyzer": "lowercase_keyword"
          },
          "sources": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "status": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          },
          "type": {
            "type": "keyword"
          },
          "urn": {
            "type": "text",
            "analyzer": "lowercase_keyword"
          }
        }
      }
    },
    "settings": {
        "analysis": {
          "filter": {
            "autocomplete_filter": {
              "type": "edge_ngram",
              "min_gram": "3",
              "max_gram": "50"
            },
            "custom_delimiter": {
              "split_on_numerics": "false",
              "split_on_case_change": "false",
              "type": "word_delimiter",
              "preserve_original": "true",
              "catenate_words": "false"
            }
          },
          "analyzer": {
            "delimit": {
              "filter": [
                "lowercase",
                "custom_delimiter"
              ],
              "tokenizer": "whitespace"
            },
            "lowercase_keyword_ngram": {
              "filter": [
                "lowercase",
                "autocomplete_filter"
              ],
              "type": "custom",
              "tokenizer": "keyword"
            },
            "delimit_edgengram": {
              "filter": [
                "lowercase",
                "custom_delimiter",
                "autocomplete_filter"
              ],
              "tokenizer": "whitespace"
            },
            "lowercase_keyword": {
              "filter": [
                "lowercase"
              ],
              "type": "custom",
              "tokenizer": "keyword"
            }
          }
        }
      }
    }
  }
}
