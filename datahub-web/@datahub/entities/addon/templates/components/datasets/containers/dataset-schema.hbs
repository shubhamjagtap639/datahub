<ConcurrencyTaskStateHandler
  @task={{getDatasetSchemaTask}}
  @errorHeading="An error occurred while fetching the schema. Please try again shortly."
>
  {{#if this.isEmpty}}
    <EmptyState
      @heading="We could not find a schema for this dataset"
    />
  {{else}}
    <Datasets::DatasetSchema
      @json={{this.json}}
      @schemas={{this.schemas}}
      @lastModified={{this.lastModifiedString}}
    />
  {{/if}}
</ConcurrencyTaskStateHandler>
