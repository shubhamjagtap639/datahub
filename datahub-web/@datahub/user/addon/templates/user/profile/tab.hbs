<User::Containers::UserMain @personUrn={{this.model.personUrn}} as |main|>
  <User::Containers::EntityHeader @entity={{main.entity}} as |data|>
    <User::Profile::EntityHeader
      @entity={{data.entity}}
      @headerProperties={{main.renderProps.userProfilePage.headerProperties}}
      @entityPageProps={{main.renderProps.entityPage}}
      @onSave={{perform data.updateProfileTask}}
      @isCurrentUser={{main.isCurrentUser}}
      @isActive={{data.entity.entity.info.active}}
    />
  </User::Containers::EntityHeader>

  <User::Profile::PageContent
    @entity={{main.entity}}
    @entityPageProps={{main.renderProps.entityPage}}
    @tabProperties={{main.renderProps.entityPage.tabProperties}}
    @tablistMenuProperties={{main.renderProps.userProfilePage.tablistMenuProperties}}
    @tabSelected={{readonly (or this.model.tabSelected main.defaultTab)}}
    @changeTabSelection={{main.changeTabSelection}}
    @configs={{this.model.pageConfigs}}
    @isCurrentUser={{main.isCurrentUser}}
    @queryParams={{this.model.queryParams}}
  />
</User::Containers::UserMain>

{{outlet}}
