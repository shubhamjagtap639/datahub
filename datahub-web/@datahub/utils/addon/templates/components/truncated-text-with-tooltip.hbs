{{#if @linkParams}}
  <DynamicLink
    class={{this.baseClass}}
    @params={{@linkParams}}
    onmouseover={{action this.hideTooltipIfUntruncated}}
  >
    {{@text}}
    {{#if this.showTooltip}}
      <TooltipOnElement
        @text={{@text}}
        @class="truncated-text-with-tooltip__tooltip"
      />
    {{/if}}
  </DynamicLink>
{{else}}
  <span
    class={{this.baseClass}}
    onmouseover={{action this.hideTooltipIfUntruncated}}
    role="tooltip"
  >
    {{@text}}
    {{#if this.showTooltip}}
      <TooltipOnElement
        @text={{@text}}
        @class="truncated-text-with-tooltip__tooltip"
      />
    {{/if}}
  </span>
{{/if}}

{{yield}}
