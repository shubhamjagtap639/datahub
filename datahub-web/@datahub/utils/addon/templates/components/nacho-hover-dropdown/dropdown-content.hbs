{{#component
  @baseComponent
  onMouseEnter=@onMouseEnter
  onMouseLeave=@onMouseLeave
}}
  <ul class="nacho-drop-down__options">
    {{#each @options as |option|}}
      <NachoHoverDropdown::DropdownOption
        @option={{option}}
        @onSelect={{@onSelect}}
        @selectedOption={{@selectedOption}}
      />
    {{/each}}
  </ul>
{{/component}}
