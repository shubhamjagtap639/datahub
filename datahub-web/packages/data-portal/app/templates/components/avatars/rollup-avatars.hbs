{{yield}}

{{#if isShowingAvatars}}
  <Avatars::AvatarsDetail @header={{header}} @onClose={{action "dismissAvatars"}}>

    <ul class="avatar-detail-container">
      {{#each avatars as |avatar|}}
        <li class="avatar-detail">

          <div class="avatar-detail__entity">
            <img
              class="avatar"
              src={{avatar.imageUrl}}
              alt={{avatar.name}}
            >
          </div>

          <Avatars::AvatarMetadata @class="avatar-detail__meta" @avatar={{avatar}} as |aviMeta|>
            <h4>{{aviMeta.name}}</h4>

            {{#if aviMeta.email}}
              <a
                href="mailto:{{aviMeta.email}}"
                class="avatar-meta-action"
                target="_blank"
                rel="noreferrer noopener"
              >
                <strong><FaIcon @icon="at" /></strong> {{aviMeta.email}}
              </a>
            {{/if}}

            {{#if aviMeta.userName}}
              <a
                class="avatar-meta-action"
                href="slack://user?team={{aviMeta.team}}&id={{aviMeta.userName}}"
              >
                <FaIcon @icon="slack" @prefix="fab"/> {{aviMeta.userName}}
              </a>
            {{/if}}
          </Avatars::AvatarMetadata>

        </li>
      {{/each}}
    </ul>

  </Avatars::AvatarsDetail>
{{/if}}
