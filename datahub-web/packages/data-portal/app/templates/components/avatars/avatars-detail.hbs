<ModalDialog @overlayClass="avatars-detail-modal-overlay" @containerClassNames={{containerClassNames}} @onClose={{onClose}}>
  <header class="avatars-detail-modal__header">
    <h2>
      {{header}}
    </h2>
    <button
      type="button"
      class="avatars-detail-modal__close"
      onclick={{action onClose}}
    >
      &times;
    </button>
  </header>

  <section class="avatars-detail-modal__content">
    {{yield}}
  </section>
</ModalDialog>
