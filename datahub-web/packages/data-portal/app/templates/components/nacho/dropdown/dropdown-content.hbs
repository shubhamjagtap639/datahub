{{#let (component @baseComponent) as |Dropdown|}}
  <Dropdown
    {{on "mouseenter" @onMouseEnter}}
    {{on "mouseleave" @onMouseLeave}}
  >
    <ul class="nacho-drop-down__options">
      {{#each options as |option|}}
        <Nacho::Dropdown::DropdownOption
          @option={{option}}
          @onSelect={{@onSelect}}
          @selectedOption={{@selectedOption}}
        />
      {{/each}}
    </ul>
  </Dropdown>
{{/let}}
