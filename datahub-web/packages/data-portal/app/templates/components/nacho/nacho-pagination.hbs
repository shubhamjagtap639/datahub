<ul class="nacho-pagination">
  <li class="nacho-pagination__previous">
    {{#if this.first}}
      <span
        class="nacho-pagination__previous-btn nacho-pagination__previous-btn--disabled"
      >
        <FaIcon @icon="chevron-left" />
        Previous
      </span>

    {{else}}
      {{#if this.prevLink}}
        <DynamicLinkWithAction
          class="nacho-pagination__previous-btn"
          @params={{prevLink}}
          @onClickAction={{if @updatePageHandler (action this.onCallExternalUpdatePageHandler this.previousPage)}}
        >
          <FaIcon @icon="chevron-left" />
          Previous
        </DynamicLinkWithAction>
      {{else}}
        <button
          type="button"
          class="nacho-pagination__previous-btn"
          {{on 'click' (fn this.onCallExternalUpdatePageHandler this.previousPage)}}
        >
          <FaIcon @icon="chevron-left" />
          Previous
        </button>
      {{/if}}
    {{/if}}
  </li>
  <li class="nacho-pagination__center">
    {{#each pages as |page|}}
      {{#if page.isSeparator}}
        <span class="nacho-pagination__page">
          ...
        </span>
      {{else if page.isCurrent}}
        <span class="nacho-pagination__page nacho-pagination__page--current">
          {{page.pageNumber}}
        </span>
      {{else}}
       {{#if page.link}}
          <DynamicLinkWithAction
            class="nacho-pagination__page-link"
            @params={{page.link}}
            @onClickAction={{if @updatePageHandler (action this.onCallExternalUpdatePageHandler page.pageNumber)}}
          >
            {{page.pageNumber}}
          </DynamicLinkWithAction>
        {{else}}
          <button
            type="button"
            class="nacho-pagination__page-link nacho-pagination__page-link-{{page.pageNumber}}"
            {{on 'click' (fn this.onCallExternalUpdatePageHandler page.pageNumber)}}
          >
            {{page.pageNumber}}
          </button>
        {{/if}}
      {{/if}}
    {{/each}}
  </li>
  <li class="nacho-pagination__next">
    {{#if last}}
      <span class="nacho-pagination__next-btn nacho-pagination__next-btn--disabled">
        Next
        <FaIcon @icon="chevron-right" />
      </span>
    {{else}}
      {{#if this.nextLink}}
        <DynamicLinkWithAction
          class="nacho-pagination__next-btn"
          @params={{this.nextLink}}
          @onClickAction={{if @updatePageHandler (action this.onCallExternalUpdatePageHandler this.nextPage)}}
        >
          Next
          <FaIcon @icon="chevron-right" />
        </DynamicLinkWithAction>
      {{else}}
        <button
            type="button"
            class="nacho-pagination__next-btn"
            {{on 'click' (fn this.onCallExternalUpdatePageHandler this.nextPage)}}
        >
          Next
          <FaIcon @icon="chevron-right" />
        </button>
      {{/if}}
    {{/if}}
  </li>
</ul>
