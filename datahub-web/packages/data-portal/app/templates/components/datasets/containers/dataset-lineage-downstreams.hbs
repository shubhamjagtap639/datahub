<h4 class="dataset-relationships__header">
  Downstream
</h4>

{{#if getDatasetDownstreamsTask.isRunning}}
  <NachoAnimation::PendulumEllipsis />
{{else}}
  {{#if this.downstreams}}
    <Datasets::Relationships::DatasetRelationshipTable
      @relationships={{this.downstreams}}
    />

  {{else}}
    <div class="dataset-relationships-not-found">
      This dataset does not have downstream relationships.
    </div>

  {{/if}}
{{/if}}
