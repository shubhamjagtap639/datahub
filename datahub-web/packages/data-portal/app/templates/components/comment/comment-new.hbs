{{#if isEditing}}
  <form {{action "publishComment" on="submit"}}>
    <MediumEditor
      class="comment-new__content"
      @value={{comment.text}}
      @options={{editorOptions}}
      @onInput={{action (mut comment.text)}}
    />

    <EmberSelector @values={{commentTypes}} @selected={{readonly commentType}} @selectionDidChange="changeCommentType" />

    <div class="comment-new__actions">
      <button type="submit" class="nacho-button--large nacho-button--secondary">
        <FaIcon @icon="plus" title="Publish this comment" />
        Publish Comment
      </button>
    </div>
  </form>

{{else}}

  {{yield}}

{{/if}}
