{
  "extends": "../../configs/tsconfig-base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": ["tests/*"],
      "dummy/*": ["tests/dummy/app/*", "app/*"],
      "@nacho-ui/dropdown": ["addon"],
      "@nacho-ui/dropdown/*": ["addon/*"],
      "@nacho-ui/dropdown/test-support": ["addon-test-support"],
      "@nacho-ui/dropdown/test-support/*": ["addon-test-support/*"],
      "@nacho-ui/dropdown/types/*": ["types/*"]
    },
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ]
}